<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageActorPhoto"
        android:layout_width="220dp"
        android:layout_height="340dp"
        android:background="@color/purple_200"
        />

    <TextView
        android:id="@+id/textActorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageActorPhoto"
        app:layout_constraintEnd_toEndOf="@+id/imageActorPhoto"
        app:layout_constraintStart_toStartOf="@+id/imageActorPhoto" />


</androidx.constraintlayout.widget.ConstraintLayout>